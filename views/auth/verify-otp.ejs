<%- include('../shared/header') %>

<main class="bg-[var(--color-gray-50)]">
  <div class="flex min-h-screen items-center justify-center px-4 py-12">
    <div class="w-full max-w-md bg-[var(--color-white)] p-8 rounded-xl shadow-lg">
      <h1 class="text-3xl font-bold text-[var(--color-black)] text-center mb-4">Verify OTP</h1>
      <p class="text-sm text-[var(--color-gray-600)] text-center mb-6">Enter the OTP sent to <strong><%= email %></strong></p>

      <!-- Error/Success Messages (From Backend) -->
      <% if (error) { %>
        <div class="text-[var(--color-red-500)] text-center font-medium mb-4 bg-[var(--color-red-100)] p-2 rounded-md"><%= error %></div>
      <% } %>
      <% if (success) { %>
        <div class="text-[var(--color-green-500)] text-center font-medium mb-4 bg-[var(--color-green-100)] p-2 rounded-md"><%= success %></div>
      <% } %>

      <form id="otpForm" action="/auth/verify-otp" method="POST" class="space-y-6">
        <input type="hidden" name="email" value="<%= email %>">
        <div>
          <label for="otp" class="block text-sm font-medium text-[var(--color-black)]">OTP</label>
          <input 
            id="otp" 
            name="otp" 
            type="text" 
            placeholder="Enter OTP" 
            required 
            class="w-full px-4 py-3 bg-[var(--color-gray-50)] border border-[var(--color-gray-300)] rounded-md focus:outline-none focus:ring-2 focus:ring-[var(--color-red-500)] text-[var(--color-black)] transition-all duration-300 shadow-sm hover:shadow-md" />
          <div id="otpError" class="hidden text-[var(--color-red-500)] text-sm mt-1"></div>
        </div>
        <button 
          type="submit" 
          class="w-full py-3 bg-[var(--color-red-500)] text-[var(--color-white)] font-semibold rounded-md hover:bg-[var(--color-red-700)] focus:outline-none focus:ring-2 focus:ring-[var(--color-red-500)] transition-all duration-300 shadow-md hover:shadow-lg">
          Verify OTP
        </button>
      </form>

      <!-- Resend OTP Section -->
      <div class="text-center mt-4">
        <button 
          id="resendOtpBtn" 
          class="text-sm text-[var(--color-red-500)] font-medium hover:underline">
          Resend OTP
        </button>
        <p id="timerText" class="hidden text-sm text-[var(--color-gray-600)] mt-2"></p>
      </div>

      <!-- Back to Sign In -->
      <p class="text-sm text-center text-[var(--color-gray-600)] mt-6">
        <a href="/auth/login" class="text-[var(--color-red-500)] font-medium hover:underline">Back to Sign In</a>
      </p>
    </div>
  </div>

  <script src="/js/authValidation.js"></script>
  <script src="/js/otpValidation.js"></script>
</main>

<%- include('../shared/footer') %>