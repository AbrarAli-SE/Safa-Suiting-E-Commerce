<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Header</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
  <header class="border-b">
    <!-- Top Bar -->
    <div class="bg-black text-white text-sm py-2 px-4 flex justify-center items-center">
      <span class="mr-2">Unleash the Summer Vibes: Dive into Style with Our Hot Deals and Free Delivery!</span>
      <a href="#" class="underline">ShopNow</a>
    </div>

    <!-- Main Navigation -->
    <div class="flex justify-between items-center py-4 px-4 lg:px-24 md:px-8">
      <!-- Logo -->
      <div class="text-2xl md:text-xl font-bold">Safa Suiting</div>

      <!-- Navigation Links -->
      <nav class="hidden md:flex space-x-8 md:space-x-4">
        <a href="#" class="hover:underline">Home</a>
        <a href="#" class="hover:underline">Contact</a>
        <a href="#" class="hover:underline">About</a>
        <a href="#" class="hover:underline">Sign Up</a>
      </nav>

      <!-- Search and Icons -->
      <div class="flex items-center space-x-4">
        <button class="text-gray-500 text-2xl md:hidden" id="searchIcon">
          <i class="bi bi-search"></i>
        </button>
        <div class="relative group hidden md:block">
          <input 
            type="text" 
            placeholder="Search..." 
            class="block p-2.5 w-40 group-focus-within:w-72 transition-all duration-300 ease-in-out z-20 text-sm text-black  bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-300"
          >
          <button class="absolute top-0 right-0 p-2.5 text-sm font-medium h-full text-gray-500">
            <i class="bi bi-search"></i>
          </button>
        </div>

        <button class="relative hidden md:block" id="wishlist">
          <i class="bi bi-heart text-2xl"></i>
          <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full px-1">3</span>
        </button>

        <button class="relative hidden md:block" id="cart">
          <i class="bi bi-cart text-2xl"></i>
          <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full px-1">5</span>
        </button>
      </div>
    </div>

    <!-- Hidden Search Input for Small Screens -->
    <div id="mobileSearch" class="hidden p-4 bg-gray-100 border-t">
      <input 
        type="text" 
        placeholder="Search..." 
        class="block p-2.5 w-full text-sm text-black border-2 border-black bg-white focus:outline-none focus:ring-2 focus:ring-gray-300"
      >
    </div>

    <!-- Bottom Navigation for Small Screens -->
    <div class="border-t fixed bottom-0 left-0 w-full bg-white shadow-md md:hidden flex justify-around py-2">
      <a href="#" class="flex flex-col items-center text-gray-700">
        <i class="bi bi-house text-xl"></i>
        <span class="text-xs">Home</span>
      </a>
      <button class="relative flex flex-col items-center text-gray-700">
        <i class="bi bi-heart text-xl"></i>
        <span class="absolute -top-1 right-1 bg-red-500 text-white text-xs rounded-full px-1">3</span>
        <span class="text-xs">Wishlist</span>
      </button>
      <button class="relative flex flex-col items-center text-gray-700">
        <i class="bi bi-cart text-xl"></i>
        <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full px-1">5</span>
        <span class="text-xs">Cart</span>
      </button>
      <a href="#" class="flex flex-col items-center text-gray-700">
        <i class="bi bi-person text-xl"></i>
        <span class="text-xs">Sign Up</span>
      </a>
    </div>
  </header>

  <script>
    const searchIcon = document.getElementById('searchIcon');
    const mobileSearch = document.getElementById('mobileSearch');

    searchIcon.addEventListener('click', () => {
      mobileSearch.classList.toggle('hidden');
    });
  </script>
</body>
</html>
