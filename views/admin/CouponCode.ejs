<%- include('../shared/asideBar') %>


<main class="flex-grow p-8 ml-0 sm:ml-20 lg:ml-64 overflow-hidden  ">
    <h1 class="text-4xl font-bold mb-8  sm:mt-7 mt-9">Coupon Code</h1>
    <form class="space-y-4 bg-gray-100 dark:bg-gray-800 p-6 rounded-lg shadow-md " id="couponForm" >
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Left Side: Coupon Details Section -->
        <div class="space-y-4">
          <h2 class="text-2xl font-semibold mb-4">Coupon Details</h2>

          <!-- Coupon Code -->
          <div class="space-y-2">
            <label for="coupon_code" class="block text-gray-700 dark:text-gray-300 font-medium">Coupon Code</label>
            <input type="text" id="coupon_code" name="coupon_code"
              class="w-full p-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-[#DB4444] focus:outline-none bg-gray-200 dark:bg-gray-700 text-gray-900 dark:text-gray-300"
              placeholder="e.g., WINTER2025" required />
          </div>

          <!-- Coupon Name -->
          <div class="space-y-2">
            <label for="coupon_name" class="block text-gray-700 dark:text-gray-300 font-medium">Coupon Name</label>
            <input type="text" id="coupon_name" name="coupon_name"
              class="w-full p-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-[#DB4444] focus:outline-none bg-gray-200 dark:bg-gray-700 text-gray-900 dark:text-gray-300"
              placeholder="e.g., Winter Sale Discount" required />
          </div>

          <!-- Specific Product -->
          <div class="space-y-2">
            <label for="specific_product" class="block text-gray-700 dark:text-gray-300 font-medium">Specific
              Product</label>
            <input type="text" id="specific_product" name="specific_product"
              class="w-full p-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-[#DB4444] focus:outline-none bg-gray-200 dark:bg-gray-700 text-gray-900 dark:text-gray-300"
              placeholder="e.g., Red Sweater" />
          </div>

          <!-- Coupon Type -->
          <div class="space-y-2">
            <label for="coupon_type" class="block text-gray-700 dark:text-gray-300 font-medium">Coupon Type</label>
            <select id="coupon_type" name="coupon_type"
              class="w-full p-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-[#DB4444] focus:outline-none bg-gray-200 dark:bg-gray-700 text-gray-900 dark:text-gray-300"
              required>
              <option value="percentage">Percentage Off</option>
              <option value="fixed">Fixed Amount Discount</option>
            </select>
          </div>

          <!-- Discount Amount -->
          <div class="space-y-2">
            <label for="discount_amount" class="block text-gray-700 dark:text-gray-300 font-medium">Discount
              Amount</label>
            <input type="text" id="discount_amount" name="discount_amount"
              class="w-full p-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-[#DB4444] focus:outline-none bg-gray-200 dark:bg-gray-700 text-gray-900 dark:text-gray-300"
              placeholder="e.g., 10% or $5" required />
          </div>

          <!-- Minimum Order Value -->
          <div class="space-y-2">
            <label for="min_order_value" class="block text-gray-700 dark:text-gray-300 font-medium">Minimum Order
              Value</label>
            <input type="number" id="min_order_value" name="min_order_value"
              class="w-full p-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-[#DB4444] focus:outline-none bg-gray-200 dark:bg-gray-700 text-gray-900 dark:text-gray-300"
              placeholder="e.g., 50" />
          </div>
        </div>

        <!-- Right Side: Coupon Dates & Limit Section -->
        <div class="space-y-4">
          <h2 class="text-2xl font-semibold mb-4">Coupon Validity & Limits</h2>

          <!-- Coupon Expiry Date -->
          <div class="space-y-2">
            <label for="expiry_date" class="block text-gray-700 dark:text-gray-300 font-medium">Coupon Expiry
              Date</label>
            <input type="date" id="expiry_date" name="expiry_date"
              class="w-full p-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-[#DB4444] focus:outline-none bg-gray-200 dark:bg-gray-700 text-gray-900 dark:text-gray-300"
              required />
          </div>

          <!-- Start Date -->
          <div class="space-y-2">
            <label for="start_date" class="block text-gray-700 dark:text-gray-300 font-medium">Start Date</label>
            <input type="date" id="start_date" name="start_date"
              class="w-full p-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-[#DB4444] focus:outline-none bg-gray-200 dark:bg-gray-700 text-gray-900 dark:text-gray-300" />
          </div>

          <!-- Usage Limit -->
          <div class="space-y-2">
            <label for="usage_limit" class="block text-gray-700 dark:text-gray-300 font-medium">Usage Limit</label>
            <input type="number" id="usage_limit" name="usage_limit"
              class="w-full p-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-[#DB4444] focus:outline-none bg-gray-200 dark:bg-gray-700 text-gray-900 dark:text-gray-300"
              placeholder="e.g., 100" />
          </div>

          <!-- Submit Button -->
          <div>
            <button type="submit"
              class="w-full px-4 py-2 bg-[#DB4444] text-white rounded-lg hover:bg-[#de2d2d] transition">
              Create Coupon
            </button>
          </div>
        </div>
      </div>

    </form>

    <!-- Coupon Display Section -->
<div id="couponDisplay" class="mt-8">
  <h2 class="text-2xl font-semibold mb-4">Created Coupons</h2>
  <ul id="couponList" class="list-disc pl-5 space-y-2">
    <!-- Dynamically added coupons will appear here -->
  </ul>
</div>
  </main>

</div>
     <!-- Link the JavaScript file -->
     <script src="/js/main.js"></script>
</body>

</html>