<%- include('../shared/asideBar') %>


  <main class="flex-grow p-8 ml-0 sm:ml-20 lg:ml-64 overflow-hidden">
    <h1 class="text-4xl font-bold mb-8  sm:mt-7 mt-9">Payment Status</h1>

    <!-- Search and Status Filter Section -->
    <div class="mb-4 flex flex-col sm:flex-row items-center sm:items-center space-y-4 sm:space-y-0">
      <!-- Search Input -->
      <div class="flex items-center space-x-4 w-full sm:w-auto">
        <input type="text" id="searchPaymentId" placeholder="Search by Payment ID" class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-400 focus:outline-none w-full sm:w-auto
      dark:border-gray-600 dark:bg-gray-800 dark:text-white dark:placeholder-gray-400">
        <button id="paymentSearchBtn" class="px-4 py-2 bg-[#DB4444] text-white rounded-lg hover:bg-[#de2d2d] transition">
          Search
        </button>
      </div>

      <!-- Status Filter Dropdown -->
      <div class="flex items-center space-x-4 w-full sm:w-auto">
        <select id="paymentStatusFilter" class="px-4 py-2 sm:ml-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-400 focus:outline-none w-full sm:w-auto
      dark:border-gray-600 dark:bg-gray-800 dark:text-white dark:placeholder-gray-400">
          <option value="">Filter by Status</option>
          <option value="Received">Received</option>
          <option value="Refunded">Refunded</option>
          <option value="Pending">Pending</option>
        </select>
      </div>
    </div>


    <!-- Payments Table -->
    <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md">
      <div class="overflow-x-auto scrollbar-thin scrollbar-thumb-gray-400 scrollbar-track-gray-100 dark:scrollbar-thumb-gray-600 dark:scrollbar-track-gray-700">
        <table class="min-w-full table-fixed" id="paymentsTable">
          <thead class="bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300">
            <tr>
              <th class="px-4 py-2 text-left w-1/6">Payment ID</th>
              <th class="px-4 py-2 text-left w-1/6">Order ID</th>
              <th class="px-4 py-2 text-left w-1/6">Customer Name</th>
              <th class="px-4 py-2 text-left w-1/6">Amount</th>
              <th class="px-4 py-2 text-left w-1/6">Payment Status</th>
            </tr>
          </thead>
          <tbody class="text-gray-700 dark:text-gray-300" id="paymentsList">
            <!-- Example Row -->
            <tr class="border-t border-gray-200 dark:border-gray-600" data-payment-id="1" data-status="Received">
              <td class="px-4 py-2">1</td>
              <td class="px-4 py-2">100</td>
              <td class="px-4 py-2">Jane Doe</td>
              <td class="px-4 py-2">$199.99</td>
              <td class="px-4 py-2 text-green-500">Received</td>
            </tr>
            <tr class="border-t border-gray-200 dark:border-gray-600" data-payment-id="2" data-status="Refunded">
              <td class="px-4 py-2">2</td>
              <td class="px-4 py-2">101</td>
              <td class="px-4 py-2">John Smith</td>
              <td class="px-4 py-2">$99.99</td>
              <td class="px-4 py-2 text-red-500">Refunded</td>
            </tr>
            <tr class="border-t border-gray-200 dark:border-gray-600" data-payment-id="3" data-status="Pending">
              <td class="px-4 py-2">3</td>
              <td class="px-4 py-2">102</td>
              <td class="px-4 py-2">Alice Brown</td>
              <td class="px-4 py-2">$150.00</td>
              <td class="px-4 py-2 text-yellow-500">Pending</td>
            </tr>
            <!-- Add more rows dynamically here -->
          </tbody>
        </table>
      </div>
    </div>
  </main>

  </div>

  <!-- Link the JavaScript file -->
  <script src="/js/main.js"></script>
  </body>

  </html>