<%- include('../shared/asideBar') %>

<main class="flex-grow p-8 ml-0 sm:ml-20 lg:ml-64 overflow-hidden">
  <h1 class="text-4xl font-bold mb-8 sm:mt-7 mt-9">User Details</h1>

  <% if (error) { %>
    <p class="text-red-500"><%= error %></p>
  <% } else if (user) { %>
    <div class="space-y-6 bg-white p-6 shadow-md rounded-lg">
      <p><strong>Name:</strong> <%= user.name %></p>
      <p><strong>Email:</strong> <%= user.email %></p>
      <p><strong>Role:</strong> <%= user.role %></p>
      <p><strong>Created At:</strong> <%= user.createdAt.toDateString() %></p>
    </div>
  <% } else { %>
    <p class="text-gray-600">No user details available.</p>
  <% } %>

  <div class="flex justify-end mt-6">
    <a href="/admin/users" class="px-4 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-400 transition">
      Back to Manage Users
    </a>
  </div>
</main>

 


  <!-- Link the JavaScript file -->
  <script src="/js/main.js"></script>

  