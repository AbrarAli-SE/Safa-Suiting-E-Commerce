<%- include('../shared/asideBar') %>

  <main class="flex-grow p-8 ml-0 sm:ml-20 lg:ml-64 overflow-hidden">
    <h1 class="text-4xl font-bold mb-8 sm:mt-7 mt-9">Manage Users</h1>

    <!-- Filter, Search Bar, and Entries Per Page -->
    <div class="mb-4 flex justify-between items-center flex-wrap">
      <!-- ✅ Role Filter Dropdown -->
      <div class="flex items-center space-x-4 w-full sm:w-auto mb-4 sm:mb-0">
        <label for="userFilter" class="text-gray-700 dark:text-gray-300">Filter By:</label>
        <select id="userFilter" class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-400 focus:outline-none w-full sm:mb-2 sm:w-auto
               dark:border-gray-600 dark:bg-gray-800 dark:text-white dark:placeholder-gray-400">
          <option value="all">All</option>
          <option value="user">Users</option>
          <option value="admin">Admins</option>
        </select>
      </div>


      <!-- Search Bar -->
      <div class="flex items-center space-x-4 w-full sm:w-auto mb-4 sm:mb-0">
        <input type="text" id="searchInput" placeholder="Search by Name or Email" class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-400 focus:outline-none w-full sm:w-auto
                dark:border-gray-600 dark:bg-gray-800 dark:text-white dark:placeholder-gray-400">
      </div>
    </div>

    <!-- ✅ Success & Error Messages -->
    <% if (successMessage) { %>
      <div class="alert-message bg-green-100 text-green-700 p-2 rounded mb-4 text-center">
        <%= successMessage %>
      </div>
      <% } %>

        <% if (errorMessage) { %>
          <div class="alert-message bg-red-100 text-red-700 p-2 rounded mb-4 text-center">
            <%= errorMessage %>
          </div>
          <% } %>


            <!-- User Table -->
            <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md">
              <div class="overflow-x-auto">
                <table class="min-w-full table-fixed">
                  <thead class="bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300">
                    <tr>
                      <th class="px-4 py-2 text-left w-1/6">Name</th>
                      <th class="px-4 py-2 text-left w-1/6">Email</th>
                      <th class="px-4 py-2 text-left w-1/6">Role</th>
                      <th class="px-4 py-2 text-left w-1/6">Actions</th>
                    </tr>
                  </thead>
                  <tbody id="userList" class="text-gray-700 dark:text-gray-300">
                    <% users.forEach((user)=> { %>
                      <tr class="border-t border-gray-200 dark:border-gray-600 user-row" data-role="<%= user.role %>">
                        <td class="px-4 py-2 user-name">
                          <%= user.name %>
                        </td>
                        <td class="px-4 py-2 user-email">
                          <%= user.email %>
                        </td>
                        <td class="px-4 py-2">
                          <form action="/admin/users/update-role" method="POST">
                            <input type="hidden" name="userId" value="<%= user._id %>">
                            <select name="role" class="px-2 py-1 border rounded-lg">
                              <option value="user" <%=user.role==='user' ? 'selected' : '' %>>User</option>
                              <option value="admin" <%=user.role==='admin' ? 'selected' : '' %>>Admin</option>
                            </select>
                            <button type="submit" class="px-4 py-2 text-red-500">Update</button>
                          </form>
                        </td>
                        <td class="pr-5 py-2 flex items-center gap-3">
                          <a href="/admin/users/<%= user._id %>" class="px-4 py-2 text-blue-500">View</a>
                        </td>
                      </tr>
                      <% }) %>
                  </tbody>


                </table>

                 <!-- ✅ No Results Message -->
                <p id="noResults" class="text-center text-red-500 font-semibold hidden mt-4">No users found</p>
              </div>
            </div>

            <!-- ✅ Entries Per Page & Pagination -->
<div class="flex justify-between items-center mt-4">
  <!-- Entries Per Page -->
  <div>
      <label for="entriesPerPage" class="text-gray-700 dark:text-gray-300">Show</label>
      <select id="entriesPerPage" class="px-3 py-1 border rounded-lg bg-white dark:bg-gray-800 dark:text-white">
          <option value="5">5</option>
          <option value="10" selected>10</option>
          <option value="20">20</option>
          <option value="50">50</option>
      </select>
      <span class="text-gray-700 dark:text-gray-300">entries</span>
  </div>

  
  <div class="flex items-center justify-center space-x-2">
    <!-- Prev Page Button -->
    <button id="prevPage" class="flex items-center justify-center size-8 rounded-sm border bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-white hover:bg-gray-300 dark:hover:bg-gray-600 transition"
      aria-label="Previous Page">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd"
          d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
          clip-rule="evenodd" />
      </svg>
    </button>
  
    <!-- Page Input -->
    <div class="flex items-center space-x-1">
      <span id="currentPage" class="text-gray-700 dark:text-white">1</span>
    </div>
  
    <!-- Next Page Button -->
    <button id="nextPage" class="flex items-center justify-center size-8 rounded-sm border bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-white hover:bg-gray-300 dark:hover:bg-gray-600 transition"
      aria-label="Next Page">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd"
          d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
          clip-rule="evenodd" />
      </svg>
    </button>
  </div>
  
</div>
  </main>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      // Function to hide error/success messages after 5 seconds
      setTimeout(function () {
        const errorMessages = document.querySelectorAll(".alert-message");
        errorMessages.forEach((message) => {
          message.style.display = "none";
        });
      }, 5000); // 5 seconds
    });
  </script>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const userFilter = document.getElementById("userFilter");
      const userRows = document.querySelectorAll(".user-row");
      const searchInput = document.getElementById("searchInput");
      const noResults = document.getElementById("noResults");

      userFilter.addEventListener("change", function () {
        const filterValue = userFilter.value;

        userRows.forEach(row => {
          const role = row.getAttribute("data-role");

          if (filterValue === "all" || role === filterValue) {
            row.style.display = "";
          } else {
            row.style.display = "none";
          }
        });
      });

      searchInput.addEventListener("input", function () {
        const query = searchInput.value.toLowerCase();
        let matchFound = false;

        userRows.forEach(row => {
          const name = row.querySelector(".user-name").textContent.toLowerCase();
          const email = row.querySelector(".user-email").textContent.toLowerCase();

          if (name.includes(query) || email.includes(query)) {
            row.style.display = "";
            matchFound = true;
          } else {
            row.style.display = "none";
          }
        });
          // ✅ Show "No results found" if no matches
          noResults.style.display = matchFound ? "none" : "block";
      });
    });
  </script>

<script>
  document.addEventListener("DOMContentLoaded", function () {
      const entriesPerPage = document.getElementById("entriesPerPage");
      const userRows = document.querySelectorAll(".user-row");
      const noResults = document.getElementById("noResults");
      const prevPage = document.getElementById("prevPage");
      const nextPage = document.getElementById("nextPage");
      const currentPage = document.getElementById("currentPage");
  
      let page = 1;
      let rowsPerPage = parseInt(entriesPerPage.value);
  
      function displayTable() {
          let start = (page - 1) * rowsPerPage;
          let end = start + rowsPerPage;
          let visibleCount = 0;
  
          userRows.forEach((row, index) => {
              if (index >= start && index < end) {
                  row.style.display = "";
                  visibleCount++;
              } else {
                  row.style.display = "none";
              }
          });
  
          // ✅ Show "No users found" if no users are displayed
          noResults.style.display = visibleCount === 0 ? "block" : "none";
  
          // ✅ Disable Prev/Next buttons if necessary
          prevPage.disabled = page === 1;
          nextPage.disabled = end >= userRows.length;
      }
  
      // ✅ Pagination Controls
      prevPage.addEventListener("click", function () {
          if (page > 1) {
              page--;
              displayTable();
              currentPage.textContent = page;
          }
      });
  
      nextPage.addEventListener("click", function () {
          if (page * rowsPerPage < userRows.length) {
              page++;
              displayTable();
              currentPage.textContent = page;
          }
      });
  
      // ✅ Entries Per Page Change
      entriesPerPage.addEventListener("change", function () {
          rowsPerPage = parseInt(entriesPerPage.value);
          page = 1;
          displayTable();
          currentPage.textContent = page;
      });
  
      // ✅ Initial Table Load
      displayTable();
  });
  </script>




  <!-- Link the JavaScript file -->
  <script src="/js/main.js"></script>

  </body>

  </html>