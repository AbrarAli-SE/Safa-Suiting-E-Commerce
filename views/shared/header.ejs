      </nav>


      <!-- Search and Icons -->
      <div class="flex items-center space-x-4">
        <!-- Search Button for Small Screens -->
        <button class="text-black text-2xl -mr-8 md:hidden dark:text-white" id="searchIcon">
          <i class="bi bi-search"></i>
        </button>

        <!-- Search Bar for Medium and Large Screens -->
        <div class="relative group hidden md:block lg:block">
          <input type="text" id="desktopSearchInput" placeholder="Search..."
            class="block p-2 w-48 z-20 text-sm border border-slate-400 text-black bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-300 dark:bg-gray-800 dark:text-white dark:focus:ring-gray-500 rounded-md">
          <button class="absolute top-0 right-0 p-2 text-sm font-medium h-full text-black dark:text-white">
            <i class="bi bi-search"></i>
          </button>
          <div id="desktopSearchResults"
            class="hidden mt-2 bg-white border border-gray-300 rounded-md shadow-lg absolute z-30 w-48  dark:bg-gray-800 dark:border-gray-600">
            <!-- Search results will appear here -->
          </div>
        </div>

        <button>
          <a href="/wishlist.html" class="relative hidden md:block cursor-pointer" id="wishlist">
            <i class="bi bi-heart text-2xl dark:text-white"></i>
            <span class="absolute -top-1 -right-1 bg-[#DB4444] dark:bg-[#de2d2d] text-white text-xs rounded-full px-1">3</span>
