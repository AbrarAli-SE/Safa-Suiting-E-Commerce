    </div>

    <!-- Hidden Search Bar for Small Screens -->
    <div id="mobileSearch"
      class="hidden p-4 bg-gray-100 border-t dark:bg-gray-800 dark:border-gray-600 fixed  w-full z-40">
      <input type="text" id="mobileSearchInput" placeholder="Search..."
        class="block p-2.5 w-full text-sm text-black border-2 border-black bg-white focus:outline-none focus:ring-2 focus:ring-gray-300 dark:bg-gray-700 dark:text-white dark:border-gray-600 dark:focus:ring-gray-500">
      <div id="mobileSearchResults"
        class="hidden mt-2 bg-white border  border-gray-300 rounded-md shadow-lg dark:bg-gray-800 dark:border-gray-600">
        <!-- Search results will appear here -->
      </div>
    </div>

    <!-- Bottom Navigation for Small Screens -->
    <div
      class="border-t fixed bottom-0 left-0 w-full z-20 bg-white shadow-md md:hidden flex justify-around py-2 dark:bg-gray-900 dark:border-gray-700">
      <a href="/" class="flex flex-col items-center text-black dark:text-white">
        <i class="bi bi-house text-xl"></i>
        <span class="text-xs">Home</span>
      </a>
      <a href="/wishlist.html" class="relative flex flex-col items-center text-black dark:text-white">
        <i class="bi bi-heart text-xl"></i>
        <span class="absolute -top-1 right-1 bg-[#DB4444] dark:bg-[#de2d2d] text-white text-xs rounded-full px-1">3</span>
        <span class="text-xs">Wishlist</span>
      </a>
      <a href="/my-cart" class="px-3 relative flex flex-col items-center text-black dark:text-white">
        <i class="bi bi-cart3 text-xl"></i>
        <span class="absolute -top-1 right-2 bg-[#DB4444] dark:bg-[#de2d2d] text-white text-xs rounded-full px-1">5</span>
        <span class="text-xs">Cart</span>

      </a>
      <a href="/account.html" class="flex flex-col items-center text-black dark:text-white">
        <i class="bi bi-person text-xl"></i>
        <span class="text-xs">Sign Up</span>
      </a>
    </div>
  </header>



  <script>


    const accountIcon = document.getElementById('accountIcon');
    const accountMenu = document.getElementById('accountMenu');

    accountIcon.addEventListener('click', () => {
      accountMenu.classList.toggle('hidden');
    });

    // Optional: Close menu if user clicks outside
    document.addEventListener('click', (e) => {
      if (!accountIcon.contains(e.target) && !accountMenu.contains(e.target)) {
        accountMenu.classList.add('hidden');
      }
    });

    const searchIcon = document.getElementById('searchIcon');
    const mobileSearch = document.getElementById('mobileSearch');
    const mobileSearchInput = document.getElementById('mobileSearchInput');
    const mobileSearchResults = document.getElementById('mobileSearchResults');
    const desktopSearchInput = document.getElementById('desktopSearchInput');
    const desktopSearchResults = document.getElementById('desktopSearchResults');

    // Dummy data for search
    const dummyResults = [
      'Summer Collection 2023',
      'Menâ€™s Formal Suits',
      'Casual Wear for Women',
      'Trending Accessories',
      'New Arrivals: Kids Wear',
      'Top Picks for Winter'
    ];

    // Toggle mobile search visibility
    searchIcon.addEventListener('click', () => {
      mobileSearch.classList.toggle('hidden');
    });

    // Function to handle search input and display results
    function handleSearch(input, resultsContainer) {
      const query = input.value.toLowerCase();
      resultsContainer.innerHTML = ''; // Clear previous results

      if (query) {
        const filteredResults = dummyResults.filter(item =>
          item.toLowerCase().includes(query)
        );
        if (filteredResults.length > 0) {
          filteredResults.forEach(result => {
            const resultItem = document.createElement('div');
            resultItem.textContent = result;
            resultItem.className = 'p-2 hover:bg-gray-100 dark:hover:bg-gray-700 cursor-pointer';
            resultsContainer.appendChild(resultItem);
          });
        } else {
          const noResult = document.createElement('div');
          noResult.textContent = 'No results found';
          noResult.className = 'p-2 text-gray-500';
          resultsContainer.appendChild(noResult);
        }
        resultsContainer.classList.remove('hidden');
      } else {
        resultsContainer.classList.add('hidden');
      }
    }

    // Event listeners for mobile and desktop search inputs
    mobileSearchInput.addEventListener('input', () =>
      handleSearch(mobileSearchInput, mobileSearchResults)
    );

    desktopSearchInput.addEventListener('input', () =>
      handleSearch(desktopSearchInput, desktopSearchResults)
    );

    // Hide results when clicking outside
    document.addEventListener('click', (e) => {
      // Close mobile search results
      if (
        !mobileSearch.contains(e.target) &&
        !mobileSearchResults.contains(e.target) &&
        e.target !== searchIcon
      ) {
        mobileSearchResults.classList.add('hidden');
      }

      // Close desktop search results
      if (
        !desktopSearchInput.contains(e.target) &&
        !desktopSearchResults.contains(e.target)
      ) {
        desktopSearchResults.classList.add('hidden');
      }
    });

    // Ensure mobile search is hidden on larger screens
    window.addEventListener('resize', () => {
      if (window.innerWidth >= 768) { // Tailwind `md` breakpoint is 768px
        mobileSearch.classList.add('hidden'); // Hide the mobile search bar
        mobileSearchResults.classList.add('hidden'); // Hide mobile search results
      }
    });

    document.querySelectorAll('.nav-link').forEach(link => {
      link.addEventListener('click', () => {
        document.querySelectorAll('.nav-link').forEach(link => link.classList.remove('active'));
        link.classList.add('active');
      });
    });

  </script>
</body>

