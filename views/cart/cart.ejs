<%- include('../shared/header') %>



<div class="max-w-7xl mx-auto p-6 grid grid-cols-1 md:grid-cols-3 gap-8 pt-36">
  <!-- Cart Items Section (Left Side) -->
  <div class="md:col-span-2 space-y-6">
    <% if (cart.length === 0) { %>
      <p>Your cart is empty.</p>
    <% } else { %>
      <h2 class="text-2xl font-semibold">Shopping Cart</h2>
      <!-- Scrollable Container -->
      <div class="cart-items-container overflow-y-auto max-h-96">
        <% cart.forEach(item => { %>
          <div class="bg-white shadow rounded-lg p-4 flex flex-col md:flex-row items-center justify-between border cart-item" data-item-id="<%= item._id %>">
            <div class="flex items-center gap-4">
              <button class="text-red-500 hover:text-red-600 p-1 rounded-full bg-red-50 remove-item" data-item-id="<%= item._id %>">âœ•</button>
              <img src="<%= item.product.image %>" alt="<%= item.product.name %>" class="w-24 h-20 object-cover rounded">
              <div>
                <h3 class="font-medium"><%= item.product.name %></h3>
                <span class="text-gray-500">Price: <span class="price" data-price="<%= item.price %>">$<%= item.price %></span></span>
              </div>
            </div>
            <div class="flex items-center gap-2">
              <input type="number" value="<%= item.quantity %>" min="1" class="quantity w-16 px-3 py-2 text-center border rounded bg-gray-50" data-item-id="<%= item._id %>">
              <span class="font-medium subtotal">$<%= (item.price * item.quantity) %></span>
            </div>
          </div>
        <% }); %>
      </div>

      <!-- Buttons (Only shown when cart has items) -->
      <div class="flex justify-between pt-4 cart-buttons">
        <button class="px-6 py-2.5 border rounded hover:bg-gray-100 transition">
          <a href="/">Return To Shop</a>
        </button>
        <button id="updateCart" class="px-6 py-2.5 border rounded hover:bg-gray-100 transition">
          Update Cart
        </button>
      </div>
    <% } %>
  </div>

  <!-- Cart Total Section (Right Side, Only shown when cart has items) -->
  <% if (cart.length > 0) { %>
    <div class="cart-total-section border rounded-lg p-6 bg-white shadow w-[350px] md:w-[400px] self-start flex flex-col">
      <h2 class="text-xl font-semibold mb-6">Cart Total</h2>
      <div class="space-y-4 flex-grow">
        <div class="flex justify-between items-center py-3 border-t">
          <span class="text-gray-600">Subtotal:</span>
          <span id="cartSubtotal" class="font-medium">$<%= totalAmount %></span>
        </div>
        <div class="flex justify-between items-center py-3 border-t">
          <span class="text-gray-600">Shipping:</span>
          <span class="font-medium">Free</span>
        </div>
        <div class="flex justify-between items-center py-3 border-t">
          <span class="text-gray-600">Total:</span>
          <span id="cartTotal" class="font-medium">$<%= totalAmount %></span>
        </div>
      </div>
      <button class="w-full px-6 py-2.5 mt-auto bg-red-500 text-white rounded hover:bg-red-600 transition">
        <a href="/user/cart/checkout">Proceed to checkout</a>
      </button>
    </div>
  <% } %>
</div>

<script type="module" src="/js/updateCart.js"></script>

<%- include('../shared/footer') %>