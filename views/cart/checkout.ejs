<%- include('../shared/header') %>

<main class="container mx-auto px-4 py-12 mt-14">
  <div class="max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-12 pt-12">
    <!-- Billing Details Form -->
    <div class="space-y-6">
      <h1 class="text-3xl font-bold text-[var(--color-black)] mb-6">Billing Details</h1>
      <form class="space-y-6" id="checkoutForm" action="/user/cart/checkout" method="POST">
        <!-- First Name -->
        <div>
          <label class="block text-sm font-medium text-[var(--color-black)] mb-2">First Name<span class="text-[var(--color-red-500)]">*</span></label>
          <input 
            type="text" 
            id="firstName" 
            name="firstName" 
            required 
            class="w-full p-3 bg-[var(--color-gray-50)] border border-[var(--color-gray-300)] rounded-md focus:outline-none focus:ring-2 focus:ring-[var(--color-red-500)] text-[var(--color-black)] transition-all duration-300 shadow-sm hover:shadow-md" />
          <div id="firstNameError" class="text-[var(--color-red-500)] text-sm mt-1 hidden">First name is required.</div>
        </div>

        <!-- Street Address -->
        <div>
          <label class="block text-sm font-medium text-[var(--color-black)] mb-2">Street Address<span class="text-[var(--color-red-500)]">*</span></label>
          <input 
            type="text" 
            id="streetAddress" 
            name="streetAddress" 
            required 
            class="w-full p-3 bg-[var(--color-gray-50)] border border-[var(--color-gray-300)] rounded-md focus:outline-none focus:ring-2 focus:ring-[var(--color-red-500)] text-[var(--color-black)] transition-all duration-300 shadow-sm hover:shadow-md" />
          <div id="streetAddressError" class="text-[var(--color-red-500)] text-sm mt-1 hidden">Street address is required.</div>
        </div>

        <!-- Apartment/Floor (Optional) -->
        <div>
          <label class="block text-sm font-medium text-[var(--color-black)] mb-2">Apartment, floor, etc. (optional)</label>
          <input 
            type="text" 
            id="apartment" 
            name="apartment" 
            class="w-full p-3 bg-[var(--color-gray-50)] border border-[var(--color-gray-300)] rounded-md focus:outline-none focus:ring-2 focus:ring-[var(--color-red-500)] text-[var(--color-black)] transition-all duration-300 shadow-sm hover:shadow-md" />
          <div id="apartmentError" class="text-[var(--color-red-500)] text-sm mt-1 hidden"></div>
        </div>

        <!-- Town/City -->
        <div>
          <label class="block text-sm font-medium text-[var(--color-black)] mb-2">Town/City<span class="text-[var(--color-red-500)]">*</span></label>
          <input 
            type="text" 
            id="townCity" 
            name="townCity" 
            required 
            class="w-full p-3 bg-[var(--color-gray-50)] border border-[var(--color-gray-300)] rounded-md focus:outline-none focus:ring-2 focus:ring-[var(--color-red-500)] text-[var(--color-black)] transition-all duration-300 shadow-sm hover:shadow-md" />
          <div id="townCityError" class="text-[var(--color-red-500)] text-sm mt-1 hidden">Town/City is required.</div>
        </div>

        <!-- Phone Number -->
        <div>
          <label class="block text-sm font-medium text-[var(--color-black)] mb-2">Phone Number<span class="text-[var(--color-red-500)]">*</span></label>
          <input 
            type="tel" 
            id="phoneNumber" 
            name="phoneNumber" 
            required 
            class="w-full p-3 bg-[var(--color-gray-50)] border border-[var(--color-gray-300)] rounded-md focus:outline-none focus:ring-2 focus:ring-[var(--color-red-500)] text-[var(--color-black)] transition-all duration-300 shadow-sm hover:shadow-md" />
          <div id="phoneNumberError" class="text-[var(--color-red-500)] text-sm mt-1 hidden">Phone number is required.</div>
        </div>

        <!-- Email Address -->
        <div>
          <label class="block text-sm font-medium text-[var(--color-black)] mb-2">Email Address<span class="text-[var(--color-red-500)]">*</span></label>
          <input 
            type="email" 
            id="emailAddress" 
            name="emailAddress" 
            required 
            class="w-full p-3 bg-[var(--color-gray-50)] border border-[var(--color-gray-300)] rounded-md focus:outline-none focus:ring-2 focus:ring-[var(--color-red-500)] text-[var(--color-black)] transition-all duration-300 shadow-sm hover:shadow-md" />
          <div id="emailAddressError" class="text-[var(--color-red-500)] text-sm mt-1 hidden">Valid email address is required.</div>
        </div>

        <!-- Save Info Checkbox -->
        <div class="flex items-center gap-2">
          <input 
            type="checkbox" 
            id="saveInfo" 
            name="saveInfo" 
            class="w-4 h-4 text-[var(--color-red-500)] border-[var(--color-gray-300)] rounded focus:ring-[var(--color-red-500)]" />
          <label for="saveInfo" class="text-sm text-[var(--color-gray-600)]">Save this information for faster checkout next time</label>
        </div>
      </form>
    </div>

    <!-- Order Summary -->
    <div>
      <div class="bg-[var(--color-gray-50)] p-6 rounded-lg shadow-lg">
        <h2 class="text-xl font-semibold text-[var(--color-black)] mb-6">Order Summary</h2>
        <div class="space-y-4">
          <!-- Products (Dynamic from cart data) -->
          <% cart.forEach(item => { %>
            <div class="flex items-center justify-between py-4 border-b border-[var(--color-gray-200)]">
              <div class="flex items-center gap-4">
                <img src="<%= item.product.image %>" alt="<%= item.product.name %>" class="w-12 h-12 object-cover rounded">
                <span class="text-[var(--color-black)]"><%= item.product.name %></span>
              </div>
              <span class="font-medium text-[var(--color-black)]">Rs <%= (item.price * (item.quantity || 1)) %></span>
            </div>
          <% }) %>

          <!-- Totals -->
          <div class="space-y-3 py-4">
            <div class="flex justify-between">
              <span class="text-[var(--color-gray-600)]">Subtotal:</span>
              <span class="font-medium text-[var(--color-black)]">Rs <%= cart.reduce((sum, item) => sum + (item.price * (item.quantity || 1)), 0) %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-[var(--color-gray-600)]">Shipping:</span>
              <span class="font-medium text-[var(--color-black)]">Free</span>
            </div>
            <div class="flex justify-between pt-3 border-t border-[var(--color-gray-200)]">
              <span class="text-[var(--color-gray-600)]">Total:</span>
              <span class="font-medium text-[var(--color-black)]">Rs <%= cart.reduce((sum, item) => sum + (item.price * (item.quantity || 1)), 0) %></span>
            </div>
          </div>

          <!-- Payment Methods -->
          <div class="space-y-4 py-4 border-t border-[var(--color-gray-200)]">
            <div class="flex items-center gap-3">
              <input 
                type="radio" 
                id="bank" 
                name="payment" 
                value="bank" 
                class="w-4 h-4 text-[var(--color-red-500)] border-[var(--color-gray-300)] focus:ring-[var(--color-red-500)]" />
              <label for="bank" class="flex items-center gap-2 text-[var(--color-black)]">
                Bank
                <div class="flex gap-2">
                  <img src="/visa.png" alt="Visa" class="h-6">
                  <img src="/mastercard.png" alt="Mastercard" class="h-6">
                  <img src="/bkash.png" alt="bKash" class="h-6">
                </div>
              </label>
            </div>
            <div class="flex items-center gap-3">
              <input 
                type="radio" 
                id="cash" 
                name="payment" 
                value="cash" 
                class="w-4 h-4 text-[var(--color-red-500)] border-[var(--color-gray-300)] focus:ring-[var(--color-red-500)]" />
              <label for="cash" class="text-[var(--color-black)]">Cash on Delivery</label>
            </div>
          </div>

          <!-- Coupon -->
          <div class="flex gap-4 py-4">
            <input 
              type="text" 
              placeholder="Coupon Code" 
              class="flex-1 p-3 bg-[var(--color-white)] border border-[var(--color-gray-300)] rounded-md focus:outline-none focus:ring-2 focus:ring-[var(--color-red-500)] transition-all duration-300" />
            <button 
              class="px-6 py-3 bg-[var(--color-red-500)] text-[var(--color-white)] rounded-lg hover:bg-[var(--color-red-700)] transition-all duration-300 shadow-md hover:shadow-lg">
              Apply Coupon
            </button>
          </div>

          <!-- Place Order Button -->
          <button 
            type="submit" 
            form="checkoutForm" 
            class="w-full px-6 py-3 bg-[var(--color-red-500)] text-[var(--color-white)] font-semibold rounded-lg hover:bg-[var(--color-red-700)] transition-all duration-300 shadow-md hover:shadow-lg">
            Place Order
          </button>
        </div>
      </div>
    </div>
  </div>
</main>

<script src="/js/checkoutValidation.js"></script>

<%- include('../shared/footer') %>