<%- include('./shared/header') %>

    <main class="container mx-auto px-4 pb-12 pt-24 mt-14">
    
    
            <div class="flex items-center justify-between px-10">
                <div class="flex items-center gap-2">
                  <div class="w-2 h-6 bg-red-500 rounded"></div>
                  <p class="text-red-500 font-semibold px-4">Search Result</p>
                </div>
              </div>
      
                
            <div class="flex items-center justify-between flex-col md:flex-row px-10">
                <h2 class="text-3xl font-bold text-center md:text-left capitalize"><%= searchQuery %></h2>
    
    
            <div class="flex md:justify-end justify-center items-center mt-4 space-x-4 mr-4">
                <button class="slider-button left-button bg-[#F5F5F5]  p-3 rounded-full transition duration-300">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-arrow-left text-red-600" viewBox="0 0 16 16">
                        <path fill-rule="evenodd"
                            d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8" />
                    </svg>
                </button>
    
                <button class="slider-button right-button bg-[#F5F5F5]  p-3 rounded-full transition duration-300">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-arrow-right text-red-600" viewBox="0 0 16 16">
                        <path fill-rule="evenodd"
                            d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8" />
                    </svg>
                </button>
            </div>
        </div>
    
        <!-- Cards Slider Container -->
        <div class="relative px-10">
            <div class="slider-container flex overflow-x-scroll scrollbar-hide space-x-6 p-4 mt-6 mb-8">
                <% if (results.length > 0) { %>
                    <% results.forEach(function(product) { %>
                        <div class="bg-[#F5F5F5] h-96 md:w-80 w-72 flex-shrink-0 relative group overflow-hidden rounded-lg shadow-lg transition-all duration-700 hover:translate-y-[-10px]">
                            <img src="<%= product.image %>" alt="<%= product.name %>" class="h-full w-full object-cover ">
        
                            <!-- Hover Buttons -->
                            <div class="absolute top-4 right-4 flex flex-col gap-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                                <button class="p-2 bg-white rounded-full shadow hover:bg-gray-100 dark:text-black transition duration-300 relative group/button">
                                    <i class="bi bi-heart"></i>
                                    <span class="absolute left-[-80px] top-1/2 -translate-y-1/2 px-2 py-1 bg-gray-800 text-white text-xs rounded opacity-0 group-hover/button:opacity-100 transition-opacity duration-300">Wishlist</span>
                                </button>
                                <button class="p-2 bg-white rounded-full shadow hover:bg-gray-100 dark:text-black transition duration-300 relative group/button">
                                    <i class="bi bi-eye"></i>
                                    <span class="absolute left-[-80px] top-1/2 -translate-y-1/2 px-2 py-1 bg-gray-800 text-white text-xs rounded opacity-0 group-hover/button:opacity-100 transition-opacity duration-300">Quick View</span>
                                </button>
                                <button class="p-2 bg-white rounded-full shadow hover:bg-gray-100 dark:text-black transition duration-300 relative group/button">
                                    <i class="bi bi-cart"></i>
                                    <span class="absolute left-[-80px] top-1/2 -translate-y-1/2 px-2 py-1 bg-gray-800 text-white text-xs rounded opacity-0 group-hover/button:opacity-100 transition-opacity duration-300">Add to Cart</span>
                                </button>
                            </div>
        
                            <!-- Product Info -->
                            <div class="absolute bottom-0 left-0 right-0 bg-white/90 dark:text-black p-4 translate-y-20 group-hover:translate-y-0 transition-all duration-300">
                                <h3 class="font-bold mb-2"><%= product.name %></h3>
                                <div class="flex justify-between items-center">
                                    <div>
                                        <span class="font-bold">$<%= product.price %></span>
                                        <% if (product.discountPrice > 0) { %>
                                            <span class="text-sm line-through ml-2">$<%= product.discountPrice %></span>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="flex justify-center items-center h-40 ml-[585px]">
                        <p class="text-center text-gray-500 text-lg ">No products found.</p>
                    </div>
                <% } %>
            </div>
        </div>
        
    
  

    </main>
    <%- include('./shared/footer') %>




